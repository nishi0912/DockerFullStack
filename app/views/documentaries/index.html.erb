<p id="notice"><%= notice %></p>

<h1>Documentaries</h1>

<table>
  <thead>
    <tr>
      <th>Documentary name</th>
      <th>Book name</th>
      <th>Slug</th>
      <th>Views</th>
      <th>Price</th>
      <th>Books</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documentaries.each do |documentary| %>
      <tr>
        <td><%= documentary.documentary_name %></td>
        <td><%= documentary.book_name %></td>
        <td><%= documentary.slug %></td>
        <td><%= documentary.views %></td>
        <td><%= documentary.price %></td>
        <td><%= documentary.books_id %></td>
        <td><%= link_to 'Show', documentary %></td>
        <td><%= link_to 'Edit', edit_documentary_path(documentary) %></td>
        <td><%= link_to 'Destroy', documentary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

